<!DOCTYPE html>
<html>
<head>
  <title><%= recipe.title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-orange-50 p-6 font-sans">
  <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-6">
    <h1 class="text-3xl font-bold text-orange-600 mb-4"><%= recipe.title %></h1>
    <img src="<%= recipe.image %>" alt="Recipe Image" class="rounded-xl w-full h-64 object-cover mb-4" />
    <p class="text-gray-700 mb-6"><%= recipe.description %></p>

    <h2 class="text-xl font-semibold mb-2">Ingredients</h2>
    <ul class="list-disc list-inside mb-6">
      <% recipe.ingredients.forEach(item => { %>
        <li><%= item %></li>
      <% }) %>
    </ul>

    <h2 class="text-xl font-semibold mb-2">Instructions</h2>
    <ol class="list-decimal list-inside space-y-2">
      <% recipe.instructions.forEach(step => { %>
        <li><%= step %></li>
      <% }) %>
    </ol>

    <div class="mt-6 text-center">
      <a href="/" class="text-orange-600 hover:underline">ðŸ”™ Back to Search</a>
    </div>
  </div>
</body>
</html>
